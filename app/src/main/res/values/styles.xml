<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Begin of Splash Activity -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/acropolis</item>
    </style>
    <!-- End of Splash Activity -->

    <!-- Begin of Main Activity -->
    <style name="MainActivityContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/mainBG</item>
    </style>

    <style name="ViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- End of Main Activity -->

    <!-- Begin of List Item -->
    <style name="ListItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/listItemMarginTop</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CircleImage">
        <item name="android:layout_width">@dimen/circleImageSize</item>
        <item name="android:layout_height">@dimen/circleImageSize</item>
        <item name="android:layout_margin">@dimen/circleImageMargin</item>
        <item name="android:layout_marginLeft">@dimen/circleImageMarginLeft</item>
    </style>

    <style name="ListItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <!-- End of List Item -->

    <!-- Begin of Place List -->
    <style name="PlaceListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- End of Place List -->

    <!-- Begin of Content Activity -->
    <style name="ContentContainer">

    </style>

</resources>
